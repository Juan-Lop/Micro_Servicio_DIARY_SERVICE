# ============================================================================
# VARIABLES DE ENTORNO PARA DIARY SERVICE
# ============================================================================
# Copia este archivo como .env y configura los valores apropiados

# ============================================================================
# SERVIDOR
# ============================================================================
PORT=8082

# ============================================================================
# BASE DE DATOS POSTGRESQL
# ============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=diary_db
DB_USERNAME=postgres
DB_PASSWORD=your_database_password_here

# ============================================================================
# JWT - DEBE SER LA MISMA CLAVE QUE EN AUTH SERVICE
# ============================================================================
JWT_SECRET_KEY=your_jwt_secret_key_here

# ============================================================================
# GOOGLE GEMINI AI
# ============================================================================
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_API_URL=https://generativelanguage.googleapis.com/v1/models/gemini-2.5-flash:generateContent

# ============================================================================
# CORS - Orígenes permitidos (separados por coma)
# ============================================================================
CORS_ALLOWED_ORIGINS=https://front-end-proyect-diario.vercel.app,http://localhost:5174,http://localhost:3000

# ============================================================================
# CONFIGURACIÓN DE HIBERNATE/JPA
# ============================================================================
HIBERNATE_DDL_AUTO=update
SHOW_SQL=false

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO
LOG_LEVEL_SPRING_WEB=WARN
LOG_LEVEL_HIBERNATE=WARN

# ============================================================================
# JVM OPTIONS (solo para Docker)
# ============================================================================
JAVA_OPTS=-Xmx512m -Xms256m
